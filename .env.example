# GraphGen 环境配置示例
# 复制此文件为 .env 并填入您的实际配置

# ====================
# 大模型 API 配置
# ====================

# 合成器模型配置（用于生成知识图谱和问答）
SYNTHESIZER_MODEL=gpt-3.5-turbo
SYNTHESIZER_BASE_URL=https://api.openai.com/v1
SYNTHESIZER_API_KEY=your-synthesizer-api-key-here

# 训练模型配置（可选，用于评估）
TRAINEE_MODEL=gpt-3.5-turbo
TRAINEE_BASE_URL=https://api.openai.com/v1
TRAINEE_API_KEY=your-trainee-api-key-here

# 分词器配置
TOKENIZER_MODEL=cl100k_base

# ====================
# 生成配置
# ====================

# 文档分块配置
CHUNK_SIZE=1024
CHUNK_OVERLAP=100

# 输出格式配置
OUTPUT_DATA_TYPE=aggregated
OUTPUT_DATA_FORMAT=Alpaca

# 问答生成配置
QUIZ_SAMPLES=2

# ====================
# 图遍历策略
# ====================

# 双向遍历
BIDIRECTIONAL=True

# 扩展方法
EXPAND_METHOD=max_tokens
MAX_EXTRA_EDGES=5
MAX_TOKENS=256
MAX_DEPTH=2

# 边采样策略
EDGE_SAMPLING=max_loss

# 孤立节点策略
ISOLATED_NODE_STRATEGY=ignore

# 损失策略
LOSS_STRATEGY=only_edge

# ====================
# API 限制配置
# ====================

# 每分钟请求数
RPM=1000

# 每分钟令牌数
TPM=50000

# ====================
# 服务器配置
# ====================

# 后端服务器配置
HOST=0.0.0.0
PORT=8000

# 文件上传配置
UPLOAD_DIR=cache/uploads
TASKS_DIR=tasks
MAX_UPLOAD_SIZE=104857600

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=cache/logs

# ====================
# 开发配置
# ====================

# 调试模式
DEBUG=False

# 模拟模式（当没有 API Key 时使用）
MOCK_MODE=True

# 测试模式
TEST_MODE=False
